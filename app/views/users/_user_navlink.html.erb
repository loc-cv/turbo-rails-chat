<% if @current_room && user.is_participant_of?(@current_room) %>
  <% active = "bg-blue-100 hover:bg-blue-200 text-gray-800" %>
<% else %>
  <% active = "bg-gray-500 hover:bg-gray-600 text-gray-100" %>
<% end %>

<%= turbo_stream_from "user_status" %>
<%= link_to user do %>
  <div class="<%= active %> flex items-center gap-3 py-3 px-5 rounded font-medium">
    <div class="icon-container">
      <%= image_tag(user.chat_avatar, class: "rounded-full min-w-full") %>
      <%= render "users/status", user: user %>
    </div>
    <p>
      <%= user.email %>
    </p>
  </div>
<% end %>
